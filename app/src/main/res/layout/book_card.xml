<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardElevation="1dp"
        android:layout_margin="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/thumbnailFrame"
                android:layout_width="match_parent"
                android:layout_height="180dp">
                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/book_thumb_dummy"
                    android:visibility="invisible"
                    />
                <ProgressBar
                    android:id="@+id/thumb_progress_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:visibility="visible"/>
            </FrameLayout>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:paddingTop="@dimen/title_padding"
                android:layout_alignBottom="@+id/thumbnailFrame"
                android:textSize="@dimen/title_textSize"
                tools:text="Not my Father"/>

            <TextView
                android:id="@+id/author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:paddingBottom="@dimen/title_padding"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:textSize="@dimen/author_textSize"
                tools:text="Darth Vader"/>
            <TextView
                android:id="@+id/author1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/author"
                android:paddingBottom="@dimen/title_padding"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:textSize="@dimen/author_textSize"
                android:visibility="gone"
                tools:text="Darth Vader"/>
            <TextView
                android:id="@+id/author2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/author1"
                android:paddingBottom="@dimen/title_padding"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:textSize="@dimen/author_textSize"
                android:visibility="gone"
                tools:text="Darth Vader"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>